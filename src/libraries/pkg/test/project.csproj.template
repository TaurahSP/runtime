<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>{TFM}</TargetFramework>
    <RuntimeIdentifiers>{RIDs}</RuntimeIdentifiers>
    <TestPackageId>{PackageId}</TestPackageId>
    <TestPackageVersion>{PackageVersion}</TestPackageVersion>
    <!-- Turn off end of life target framework checks as we intentionally build older .NETCoreApp configurations. -->
    <CheckEolTargetFramework>false</CheckEolTargetFramework>
    <NETCoreAppMaximumVersion>99.0</NETCoreAppMaximumVersion>

    <SupportFilesDir Condition="'$(SupportFilesDir)' == ''">$([MSBuild]::GetPathOfFileAbove(Directory.Build.props))</SupportFilesDir>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="{PackageId}" Version="{PackageVersion}" />
  </ItemGroup>

  <Import Project="$(SupportFilesDir)\packageTest.targets" />
</Project>
